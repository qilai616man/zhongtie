<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageButton
        android:id="@+id/btn_mark_show_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="8dp"
        android:layout_marginTop="2dp"
        android:background="#00000000"
        android:contentDescription="@string/mark_hint"
        android:src="@drawable/annotation_mark" />

    <TextView
        android:id="@+id/txt_mark_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/btn_mark_show_hint"
        android:layout_below="@+id/btn_mark_show_hint"
        android:layout_marginRight="5dp"
        android:background="@drawable/menu_function"
        android:gravity="left"
        android:maxWidth="200dp"
        android:paddingBottom="5dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="15dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#FFF" />

</RelativeLayout>