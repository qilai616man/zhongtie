<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".fragments.login.EmailLoginFragment">

    <com.crphdm.dl2.views.ClearEditTextNew
        android:id="@+id/username"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/gray_rectangle"
        android:drawableLeft="@drawable/selector_email"
        android:drawablePadding="8dp"
        android:hint="请输入手机号码"
        android:inputType="phone"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:singleLine="true"
        android:textSize="14sp"
        app:iconClear="@drawable/clear_normal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="16dp"
        android:orientation="horizontal">

        <com.crphdm.dl2.views.ClearEditTextNew
            android:id="@+id/verify_code"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:singleLine="true"
            android:background="@drawable/gray_rectangle"
            android:drawablePadding="8dp"
            android:hint="请输入验证码"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:textSize="14sp"
            android:inputType="number"
            app:iconClear="@drawable/clear_normal" />

        <Button
            android:id="@+id/get_verify_code"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="8dp"
            android:layout_weight="3"
            android:background="@drawable/selector_solid_btn"
            android:text="获取验证码"
            android:textColor="@color/white_btn_text_color"
            android:textSize="16sp" />

    </LinearLayout>


    <Button
        android:id="@+id/bind"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/selector_solid_btn"
        android:text="绑定"
        android:textColor="@color/white_btn_text_color"
        android:textSize="16sp" />


</LinearLayout>