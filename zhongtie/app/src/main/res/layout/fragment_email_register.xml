<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".fragments.login.EmailLoginFragment">

    <com.crphdm.dl2.views.ClearEditTextNew
        android:id="@+id/username"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/gray_rectangle"
        android:drawableLeft="@drawable/selector_email"
        android:drawablePadding="8dp"
        android:hint="请输入邮箱地址"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:singleLine="true"
        android:textSize="14sp"
        app:iconClear="@drawable/clear_normal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="16dp"
        android:orientation="horizontal">

        <com.crphdm.dl2.views.ClearEditTextNew
            android:id="@+id/verify_code"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="@drawable/gray_rectangle"
            android:drawablePadding="8dp"
            android:hint="请输入验证码"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:singleLine="true"
            android:textSize="14sp"
            app:iconClear="@drawable/clear_normal" />

        <Button
            android:id="@+id/get_verify_code"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="8dp"
            android:layout_weight="3"
            android:background="@drawable/selector_solid_btn"
            android:text="获取验证码"
            android:textColor="@android:color/white"
            android:textSize="16sp" />

    </LinearLayout>

    <com.crphdm.dl2.views.ClearEditTextNew
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/gray_rectangle"
        android:drawableLeft="@drawable/selector_password"
        android:drawablePadding="8dp"
        android:hint="请输入密码"
        android:inputType="textPassword"
        android:maxLength="20"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:singleLine="true"
        android:textSize="14sp"
        app:iconClear="@drawable/clear_normal" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp">

        <CheckBox
            android:id="@+id/cb_register_deal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:checked="true"
            android:text="已阅读并同意" />

        <TextView
            android:id="@+id/tv_1_user_agreement"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:text="《注册用户协议》"
            android:textColor="@color/colorPrimary" />
    </FrameLayout>

    <Button
        android:id="@+id/register"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/selector_solid_btn"
        android:text="立即注册"
        android:textColor="@android:color/white"
        android:textSize="16sp" />


</LinearLayout>