<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="10dp">
        <RelativeLayout
            android:layout_width="170dp"
            android:layout_height="130dp">
            <ImageView
                android:layout_width="170dp"
                android:id="@+id/video_image_item_id"
                android:layout_height="130dp"
                android:scaleType="fitXY"
                android:layout_margin="5dp"
                android:background="#fff"
                android:src="@mipmap/ic_launcher"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_margin="13dp"
                android:textColor="#fff"
                android:background="#000"
                android:alpha="0.5"
                android:id="@+id/video_time_id"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="130dp">
            <TextView
                android:layout_margin="10dp"
                android:text=""
                android:id="@+id/video_name_item_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:text=""
                android:id="@+id/video_synopsis_item_id"
                android:layout_marginTop="10dp"
                android:layout_below="@id/video_name_item_id"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:text=""
                android:id="@+id/video_shichang_item_id"
                android:layout_margin="10dp"
                android:textColor="#f00"
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#ccc"/>
</LinearLayout>